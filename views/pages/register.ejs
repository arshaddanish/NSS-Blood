<%- include('../partials/header'); %>

<section class="section-content-block section-secondary-bg">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 wow fadeInLeft" style="float:none;margin:auto;">
        <div class="contact-form-block">
          <h2 class="contact-title">Register For An Account</h2>

          <form role="form" action="#" method="post" id="contact-form">
            <div class="form-group">
              <input type="email" class="form-control" id="user_email" name="user_email" placeholder="Email" data-msg="Please Enter Your Valid Email" />
            </div>

            <div class="form-group">
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" data-msg="Please Enter Your Correct Password" />
            </div>

            <div>
              <p>Already have an account? <a href="/login">&nbsp;Login</a></p>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-theme">Register Now</button>
            </div>
          </form>
        </div>
        <!-- end .contact-form-block  -->
      </div>
      <!--  end col-sm-6  -->
    </div>
    <!-- end row  -->
  </div>
  <!--  end .container -->
</section>
<!-- end .section-content-block  -->

<%- include('../partials/footer'); %>